<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des Catways r√©serv√©es</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">

  <div class="d-flex align-items-center justify-content-between mb-4">
    <div>
      <h1 class="mb-0">Dashboard Capitainerie</h1>
      <h2 class="mb-0">Formulaire des Catways r√©serv√©es</h2>
    </div>
    <div>
      <a href="/dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour
      </a>
    </div>
  </div>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <div class="row">
    <!-- Liste des r√©servations -->
    <div class="col-md-6">
      <h3>Liste des r√©servations</h3>
      <% if (reservations.length === 0) { %>
        <p>Aucune r√©servation pour ce catway.</p>
      <% } else { %>
        <ul class="list-group">
          <% reservations.forEach(r => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= r.clientName %></strong> - <%= r.boatName %><br>
                <small><%= r.checkIn.toDateString() %> ‚Üí <%= r.checkOut.toDateString() %></small>
              </div>
              <form action="/dashboard/catways/<%= catway._id %>/reservations/<%= r._id %>/delete?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cette r√©servation ?')">üóë</button>
              </form>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>

    <!-- Formulaire r√©servation -->
    <div class="col-md-6">
      <h3>Nouvelle R√©servation</h3>
      <form action="/dashboard/catways/<%= catway._id %>/reservations" method="POST" class="border p-3 rounded bg-light shadow">
        <div class="mb-2">
          <input type="text" name="clientName" class="form-control" placeholder="Nom du client" required>
        </div>
        <div class="mb-2">
          <input type="text" name="boatName" class="form-control" placeholder="Nom du bateau" required>
        </div>
        <div class="mb-2">
          <label>Date d'arriv√©e :</label>
          <input type="date" name="checkIn" class="form-control" required>
        </div>
        <div class="mb-2">
          <label>Date de d√©part :</label>
          <input type="date" name="checkOut" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success w-100">R√©server</button>
      </form>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>