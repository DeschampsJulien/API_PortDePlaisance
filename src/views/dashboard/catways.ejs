<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des Catways</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">

  <div class="d-flex align-items-center justify-content-between mb-4">
    <div>
      <h1 class="mb-0">Dashboard Capitainerie</h1>
      <h2 class="mb-0">Formulaire Catway</h2>
    </div>
    <div>
      <a href="/dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour
      </a>
    </div>
  </div>

  <!-- Alerte d'erreur -->
  <% if (typeof error !== "undefined" && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <div class="row">
    <!-- Liste des Catways -->
    <div class="col-md-4 mb-4">
      <h3>Liste des catways</h3>
      <ul class="list-group">
        <% catways.forEach(c => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>N°:<%= c.catwayNumber %></strong> <%= c.type %> - <%= c.catwayState %>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Créer un Catway -->
    <div class="col-md-4 mb-4">
      <h3>Créer un Catway</h3>
      <form action="/dashboard/catways" method="POST" class="border p-3 rounded bg-light">
        <div class="mb-2">
          <input type="text" name="catwayNumber" class="form-control" placeholder="Numéro du catway" required>
        </div>
        <div class="mb-2">
          <select class="form-select" id="type" name="type" required>
            <option value="long">Long</option>
            <option value="short">Short</option>
          </select>
        </div>
        <div class="mb-2">
          <input type="text" name="catwayState" class="form-control" placeholder="Description">
        </div>
        <button type="submit" class="btn btn-success w-100">Créer</button>
      </form>
    </div>

    <!-- Modifier / Supprimer un Catway -->
    <div class="col-md-4 mb-4">
      <h3>Modifier / Supprimer Catways</h3>
      <% catways.forEach(c => { %>
        
      <div class="border p-3 rounded bg-light mb-3">
        <!-- Formulaire Modifier -->
        <form action="/dashboard/catways/<%= c._id %>/update?_method=PUT" method="POST" class="mb-2">
          <div class="mb-2">
            <input type="text" class="form-control" value="<%= c.catwayNumber %>" disabled>
          </div>
          <div class="mb-2">
            <input type="text" class="form-control" value="<%= c.type %>" disabled>
          </div>
          <div class="mb-2">
            <!-- Seul l’état est modifiable -->
            <input type="text" name="catwayState" class="form-control" placeholder="Description">
          </div>
          <button type="submit" class="btn btn-warning w-100">Modifier</button>
        </form>
        <!-- Formulaire Supprimer -->
        <form action="/dashboard/catways/<%= c._id %>/delete?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Supprimer ce catway ?')">Supprimer</button>
        </form>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

