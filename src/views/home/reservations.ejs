<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des Catways</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">

  <div class="d-flex align-items-center justify-content-between mb-4">
    <div>
      <h1 class="mb-0">Dashboard Capitainerie</h1>
      <h2 class="mb-0">Formulaire Réservations</h2>
    </div>
    <div>
      <a href="/home" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour
      </a>
    </div>
  </div>

  <!-- Alerte d'erreur -->
  <% if (typeof error !== "undefined" && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <div class="row">
    <!-- Liste des réservations -->
    <div class="col-md-4 mb-4">
      <h3>Liste des Réservations</h3>
      <ul class="list-group">
        <% reservations.forEach(r => { %>
          <li class="list-group-item">
            <strong>Catway :</strong> <%= r.catwayNumber %> <br>
            <strong>Client :</strong> <%= r.clientName %> <br>
            <strong>Bateau :</strong> <%= r.boatName %> <br>
            <strong>Check-In :</strong> <%= r.checkIn.toDateString() %> <br>
            <strong>Check-Out :</strong> <%= r.checkOut.toDateString() %>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Créer une réservation -->
    <div class="col-md-4 mb-4">
      <h3>Nouvelle Réservation</h3>
      <form action="/home/reservations" method="POST" class="border p-3 rounded bg-light">
        <div class="mb-2">
          <label>Numéro de Catway</label>
          <input type="text" name="catwayNumber" class="form-control" required>
        </div>
        <div class="mb-2">
          <label>Nom du client</label>
          <input type="text" name="clientName" class="form-control" required>
        </div>
        <div class="mb-2">
          <label>Nom du bateau</label>
          <input type="text" name="boatName" class="form-control" required>
        </div>
        <div class="mb-2">
          <label>Date début</label>
          <input type="date" name="checkIn" class="form-control" required>
        </div>
        <div class="mb-2">
          <label>Date fin</label>
          <input type="date" name="checkOut" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Enregistrer</button>
      </form>
    </div>

    <!-- Modifier / Supprimer une réservation-->
    <div class="col-md-4 mb-4">
      <h3>Modifier / Supprimer</h3>
      <% reservations.forEach(r => { %>

        <div class="border p-3 rounded bg-light mb-3">
          <!-- Formulaire Modifier -->
          <form action="/home/reservations/<%= r._id %>/update" method="POST" class="mb-2">
            <div class="mb-2">
              <input type="text" name="clientName" value="<%= r.clientName %>" class="form-control" placeholder="Nom du client" required>
            </div>
            <div class="mb-2">
              <input type="text" name="boatName" value="<%= r.boatName %>" class="form-control" placeholder="Nom du bateau" required>
            </div>
            <div class="mb-2">
              <input type="date" name="checkIn" value="<%= r.checkIn.toISOString().split('T')[0] %>" class="form-control" required>
            </div>
            <div class="mb-2">
              <input type="date" name="checkOut" value="<%= r.checkOut.toISOString().split('T')[0] %>" class="form-control" required>
            </div>
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-warning w-100">Modifier</button>
            </div>
          </form>
          <!-- Formulaire Supprimer -->
          <form action="/home/reservations/<%= r._id %>/delete" method="POST">
            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Supprimer cette réservation ?')">Supprimer</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>